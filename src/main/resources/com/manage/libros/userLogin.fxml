<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<TilePane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="470.0" prefWidth="584.0" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.manage.libros.UserLoginSignupController">
    <VBox alignment="TOP_RIGHT" prefHeight="471.0" prefWidth="587.0">
        <Button onAction="#homepage" alignment="TOP_LEFT" contentDisplay="TOP" mnemonicParsing="false"
                style="-fx-background-color: transparent;" text="Back" textAlignment="CENTER"/>
        <Label alignment="CENTER" contentDisplay="CENTER" lineSpacing="20.0" prefHeight="150.0" prefWidth="580.0"
               text="User Login" textAlignment="CENTER">
            <font>
                <Font name="JetBrains Mono NL ExtraBold" size="53.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="53.0" prefWidth="584.0">
            <Label text="Username : ">
                <font>
                    <Font name="JetBrains Mono ExtraBold" size="13.0"/>
                </font>
            </Label>
            <TextField fx:id="loginUsername" prefHeight="35.0" prefWidth="215.0" promptText="Enter Username">
                <font>
                    <Font name="JetBrains Mono ExtraLight" size="13.0"/>
                </font>
            </TextField>
        </HBox>
        <HBox alignment="CENTER" prefHeight="63.0" prefWidth="584.0">
            <Label alignment="CENTER" contentDisplay="CENTER" text="Password : ">
                <font>
                    <Font name="JetBrains Mono ExtraBold" size="13.0"/>
                </font>
            </Label>
            <TextField fx:id="loginPassword" prefHeight="34.0" prefWidth="216.0" promptText="Enter Password">
                <font>
                    <Font name="JetBrains Mono NL ExtraLight" size="13.0"/>
                </font>
            </TextField>
        </HBox>
        <HBox alignment="CENTER">
            <Label fx:id="loginError" alignment="CENTER" contentDisplay="CENTER" prefHeight="39.0" prefWidth="86.0"
                  >
                <font>
                    <Font name="JetBrains Mono NL ExtraLight" size="13.0"/>
                </font>
            </Label>
        </HBox>
        <HBox alignment="CENTER" prefHeight="67.0" prefWidth="584.0" spacing="20.0">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <Button onAction="#userLoginButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                    style="-fx-background-color: #d3d3d3; -fx-background-radius: 10;" text="Login"
                    textAlignment="CENTER">
                <font>
                    <Font name="JetBrains Mono NL Medium" size="17.0"/>
                </font>
            </Button>
            <Button onAction="#resetFields" mnemonicParsing="false" prefHeight="35.0" prefWidth="80.0"
                    style="-fx-background-color: #d3d3d3; -fx-background-radius: 10;" text="Reset">
                <font>
                    <Font name="JetBrains Mono Medium" size="17.0"/>
                </font>
            </Button>
        </HBox>
        <HBox alignment="CENTER">
            <Label onMouseClicked="#goToSignup" alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0"
                   prefWidth="143.0" text="New User? Signup" textAlignment="JUSTIFY">
                <font>
                    <Font name="JetBrains Mono NL ExtraLight Italic" size="13.0"/>
                </font>
            </Label>
        </HBox>
    </VBox>
</TilePane>
